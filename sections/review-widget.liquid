{% schema %}
{
  "name": "Review Widget",
  "settings": [

    {
      "type": "range",
      "id": "columns_per_row",
      "label": "Reviews per row",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },

    {
  "type": "select",
  "id": "text_alignment",
  "label": "Text Alignment",
  "default": "center",
  "options": [
    {
      "value": "text-left",
      "label": "Left"
    },
    {
      "value": "text-center",
      "label": "Center"
    },
    {
      "value": "text-right",
      "label": "Right"
    }
  ]
}

  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "feature_image",
          "label": "Feature Image"
        },
        {
          "type": "range",
          "id": "star_rating",
          "label": "Star Rating (1–5)",
          "min": 1,
          "max": 5,
          "default": 5
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title / Caption",
          "default": "Amazing Product!"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Review Description",
          "default": "I loved using this product. Highly recommend it!"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "John Doe"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Review Widget",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}

{%- style -%}
.review-slider .review-item {
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 12px;
  background-color: #fff;
  text-align: center;
  margin: 0 10px;
}
.review-slider .review-item img {
 

width: 100%;
  height: auto;
  border-radius: 30px;
  object-fit: cover;
  margin-bottom: 15px;
}


.review-slider .review-title {
  font-weight: bold;
  margin-bottom: 10px;
}
.review-slider .review-stars {
  color: #ffb700;
  font-size: 16px;
  margin-bottom: 8px;
}
.review-slider .review-desc {
  font-size: 14px;
  color: #444;
  margin-bottom: 10px;
}
.review-slider .review-author {
  font-style: italic;
  font-size: 13px;
  color: #777;
}
{%- endstyle -%}

<div class="page-width">
  <div class="review-slider  {{ section.settings.text_alignment }}" data-columns="{{ section.settings.columns_per_row }}">
    {% for block in section.blocks %}
      <div class="review-item">
         {% if block.settings.feature_image %}
          <img src="{{ block.settings.feature_image | img_url: '100x100' }}" alt="{{ block.settings.title | escape }}">
        {% endif %}

        {% if block.settings.star_rating %}
          <div class="review-stars">
            {% for i in (1..block.settings.star_rating) %}
              ★
            {% endfor %}
            {% assign remaining_stars = 5 | minus: block.settings.star_rating %}
            {% for i in (1..remaining_stars) %}
              ☆
            {% endfor %}
          </div>
        {% endif %}

        {% if block.settings.title %}
          <div class="review-title">{{ block.settings.title }}</div>
        {% endif %}

        {% if block.settings.description %}
          <div class="review-desc">{{ block.settings.description }}</div>
        {% endif %}

        {% if block.settings.author_name %}
          <div class="review-author">– {{ block.settings.author_name }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    if (typeof jQuery === 'undefined' || typeof jQuery.fn.slick === 'undefined') {
      console.error('jQuery or Slick Slider is not loaded.');
      return;
    }

    const $slider = $('.review-slider');

    if (!$slider.hasClass('slick-initialized')) {
      const columns = parseInt($slider.data('columns')) || 3;
      $slider.slick({
        slidesToShow: columns,
        slidesToScroll: 1,
        arrows: true,
        infinite: true,
        dots: false,
        responsive: [
          {
            breakpoint: 1024,
            settings: { slidesToShow: Math.min(columns, 2) }
          },
          {
            breakpoint: 768,
            settings: { slidesToShow: 1 }
          }
        ]
      });
    }
  });
</script>
